<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Chess Game</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-zinc-800 text-white">
    <div class="container">
        <!-- Header -->
        <header class="text-center py-8">
            <h1 class="text-4xl font-bold mb-4">Chess Master</h1>
            <p class="text-xl text-zinc-400">Challenge your mind with every move</p>
        </header>

        <!-- Game Layout -->
        <div class="game-container">
            <!-- Left Player -->
            <div class="player-info">
                <h2 class="text-2xl font-bold mb-4">White Player</h2>
                <div id="white-player" class="text-lg text-zinc-400">Waiting...</div>
                <div class="player-stats">
                    <div class="flex justify-between mb-2">
                        <span>Pieces Captured:</span>
                        <span id="white-captured">0</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Time:</span>
                        <span id="white-time">05:00</span>
                    </div>
                </div>
            </div>

            <!-- Chessboard -->
            <div class="flex flex-col items-center">
                <div class="status-bar">
                    <span id="game-status">White to move</span>
                </div>
                <div class="chessboard"></div>
                <div class="controls">
                    <button class="btn" id="reset-btn">Reset Game</button>
                </div>
            </div>

            <!-- Right Player -->
            <div class="player-info">
                <h2 class="text-2xl font-bold mb-4">Black Player</h2>
                <div id="black-player" class="text-lg text-zinc-400">Waiting...</div>
                <div class="player-stats">
                    <div class="flex justify-between mb-2">
                        <span>Pieces Captured:</span>
                        <span id="black-captured">0</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Time:</span>
                        <span id="black-time">05:00</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Keep your original scripts -->
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <script src="/js/chessgame.js"></script>
</body>
</html>